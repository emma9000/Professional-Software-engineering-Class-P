import os
import string

def file_read(file_path):
    with open(file_path,'r',encoding="utf-8") as f:
        infile=f.read()
        return infile
    
def replace_punctuation(context):
    for p in string.punctuation:
        context=context.replace('',p)
    return context

if __name__=="__main__":
    # check path exist
    file_path="demo.txt"
    new_path="demo_copy.txt"
    if(os.path.exists(file_path)):
        
        context= file_read(file_path) 
        #for p in string.punctuation:
        #    context=context.replace(p,'')
        translator=str.maketrans("","",string.punctuation) # erase all the punctuation
        context=context.translate(translator)
        print(context)

        wordlist=context.split()
        number=len(wordlist)
        print(f"The context total number is {number}!")

    else:
        print("Your file is not exist!")
