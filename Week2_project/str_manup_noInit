
class stringManupulator:

# The __init__ method is used to initialize the object's attributes when an instance is created.
# It helps to set up the initial state of the object in a clean and organized way, 
# making the code more readable and reducing the chance of errors.

    def find_character(char,text):
        return text.find(char)

    def string_lenth(text):
        lenth= len(text)
        print(f"the input lenth isï¼š{lenth}")

    def string_toupper(text):
        upper_string= str.upper(text)
        print(f"the input upper style is {upper_string}")


if __name__=="__main__":

    text="example"

    result= stringManupulator.find_character('x',text)
    print(result)

    #input_word=input("Please input a word:")
    #text=input_word

    
    stringManupulator.string_lenth(text)
    stringManupulator.string_toupper(text)
    

